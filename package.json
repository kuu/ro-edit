{
  "name": "ro-edit",
  "version": "0.0.1",
  "description": "A simple video editing tool for track composition, trimming, av-sync adjustment, etc.",
  "main": "src/index.js",
  "bin": {
    "ro": "src/cli.js"
  },
  "files": [
    "README.md",
    "lib"
  ],
  "scripts": {
    "lint": "eslint src/ test/",
    "test": "npm run lint && npm run test-node && npm run test-browser",
    "test-node": "jasmine JASMINE_CONFIG_PATH=jasmine.json",
    "test-browser": "karma start karma.conf.js",
    "clean": "rm -fR lib ; mkdir lib",
    "build": "npm run clean && npm run debug-build && npm run release-build",
    "debug-build": "npm run debug-bundle",
    "debug-bundle": "browserify -t babelify src/index.js > lib/ro-edit.deb.js --debug",
    "release-build": "npm run release-bundle && npm run minify",
    "release-bundle": "NODE_ENV=production browserify -t babelify src/index.js > lib/ro-edit.js",
    "minify": "uglifyjs lib/ro-edit.js --source-map-url ro-edit.js.map -p 1 --source-map lib/ro-edit.js.map -c -m -o lib/ro-edit.min.js",
    "prepublish": "npm run build && dist-es6",
    "self": "ro"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuu/ro-edit.git"
  },
  "keywords": [
    "Video Editing"
  ],
  "author": "Kuu Miyazaki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kuu/ro-edit/issues"
  },
  "homepage": "https://github.com/kuu/ro-edit",
  "devDependencies": {
    "babel-plugin-transform-kontainer-js": "0.1.0",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "eslint": "^2.10.2",
    "jasmine-core": "^2.4.1",
    "jasmine-es6": "^0.1.10",
    "karma": "^0.13.22",
    "karma-browserify": "^5.0.5",
    "karma-chrome-launcher": "^1.0.1",
    "karma-cli": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "dist-es6": "^0.1.18",
    "yargs": "^4.7.1",
    "kontainer-js": "^2.1.6"
  },
  "engines": {
    "npm": "^3.0.0"
  }
}
